<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Logowanie</h2>
        <% if(!loggedUser) { %>
            <div id="login">
               
                <form class="form" method="post" action="/login" novalidate>
                    <label for="loginEmail">Email:</label>
                    <input type="email" id="loginEmail" name="email">
        
                    <label for="loginPassword">Hasło:</label>
                    <input type="password" id="loginPassword" name="password">
        
                    <input type="submit" class="form-button-submit" value="Zaloguj się">
                    <span id="loginErrors"><%= loginError ? loginError : ''%></span>
                </form>
            </div>
        <% } else { %>
            <span>Jesteś zalogowany jako: <%=loggedUser.firstName + " " + loggedUser.lastName%></span>
            <a href="/logout"  class="form-button-submit">Wyloguj się</a>
        <% } %>
    </main>


<%- include('../../fragments/footer.ejs') %>